{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 350,
  "height": 200,
  "padding": 5,
  "autosize": "pad",
  "signals": [
    {
      "name": "bandwidth",
      "value": -1,
      "bind": {
        "input": "range",
        "min": -1,
        "max": 100,
        "step": 1,
        "name": "Bandwidth : "
      }
    },
    {
      "name": "resolve",
      "value": "shared",
      "bind": {
        "input": "select",
        "options": ["independent", "shared"],
        "name": "Resolve : "
      }
    },
    {
      "name": "counts",
      "value": true,
      "bind": {"input": "checkbox", "name": "Counts : "}
    }
  ],
  "data": [
    {
      "name": "source",
      "url": "https://raw.githubusercontent.com/jeyvanVD/FIT3179/master/data/cost_of_living_index.json"
    },
    {
      "name": "density",
      "source": "source",
      "transform": [
        {
          "type": "kde2d",
          "groupby": ["Continent"],
          "size": [{"signal": "width"}, {"signal": "height"}],
          "x": {"expr": "scale('x', datum.Local_Purchasing_Power_Index)"},
          "y": {"expr": "scale('y', datum.Groceries_Index)"},
          "bandwidth": {"signal": "[bandwidth, bandwidth]"},
          "counts": {"signal": "counts"}
        }
      ]
    },
    {
      "name": "contours",
      "source": "density",
      "transform": [
        {
          "type": "isocontour",
          "field": "grid",
          "resolve": {"signal": "resolve"},
          "levels": 6
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": false,
      "nice": true,
      "zero": true,
      "domain": {"data": "source", "field": "Local_Purchasing_Power_Index"},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": false,
      "nice": true,
      "zero": true,
      "domain": {"data": "source", "field": "Groceries_Index"},
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source",
        "field": "Continent",
        "sort": {"order": "ascending", "field": "key"}
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": true,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Local Purchasing Power Index"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": true,
      "orient": "left",
      "titlePadding": 5,
      "title": "Groceries Index"
    }
  ],
  "legends": [
    {"title": "Continent", "stroke": "color", "symbolType": "circle"}
  ],
  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "Local_Purchasing_Power_index"},
          "y": {"scale": "y", "field": "Groceries_index"},
          "size": {"value": 4},
          "fill": {"value": "#ccc"}
        }
      }
    },
    {
      "type": "image",
      "from": {"data": "density"},
      "encode": {
        "update": {
          "x": {"value": 0},
          "y": {"value": 0},
          "width": {"signal": "width"},
          "height": {"signal": "height"},
          "aspect": {"value": false}
        }
      },
      "transform": [
        {
          "type": "heatmap",
          "field": "datum.grid",
          "resolve": {"signal": "resolve"},
          "color": {"expr": "scale('color', datum.datum.Continent)"}
        }
      ]
    },
    {
      "type": "path",
      "clip": true,
      "from": {"data": "contours"},
      "encode": {
        "enter": {
          "strokeWidth": {"value": 1},
          "strokeOpacity": {"value": 1},
          "stroke": {"scale": "color", "field": "Continent"}
        }
      },
      "transform": [{"type": "geopath", "field": "datum.contour"}]
    }
  ],
  "config": {}
}